<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/sm_top_rlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:id="@+id/edit_profile_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_15"
            android:text="编辑资料"
            android:textColor="@color/white"
            android:textSize="@dimen/dm028"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sm_top_icon_iv"
            android:layout_width="@dimen/sm_top_icon_height"
            android:layout_height="@dimen/sm_top_icon_height"
            android:layout_below="@id/edit_profile_click"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dm010"
            android:scaleType="fitXY"
            fresco:actualImageScaleType="fitXY"
            fresco:failureImage="@drawable/ic_def_logo_188_188"
            fresco:placeholderImage="@drawable/ic_def_logo_188_188"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:progressBarImage="@drawable/ic_def_logo_188_188"
            fresco:roundAsCircle="true"
            />

        <TextView
            android:id="@+id/sm_top_nikename_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sm_top_icon_iv"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:lines="1"
            android:maxLength="15"
            android:paddingTop="@dimen/dm024"
            android:paddingBottom="@dimen/dm044"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="@dimen/dm024"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sm_system_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm088"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dm052"
        >

        <ImageView
            android:layout_width="@dimen/font_sliding_menu_item"
            android:layout_height="@dimen/font_sliding_menu_item"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/left_settings"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm012"
            android:text="系统基本设置"
            android:gravity="center"
            android:textColor="@color/color_4d4d4d"
            android:textSize="@dimen/dm028"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sm_joypad_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm052"
        android:paddingLeft="@dimen/dm052"
        android:gravity="center|left"
        >

        <ImageView
            android:layout_width="@dimen/font_sliding_menu_item"
            android:layout_height="@dimen/font_sliding_menu_item"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/left_game"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm012"
            android:text="游戏手柄设置"
            android:textColor="@color/color_4d4d4d"
            android:gravity="center"
            android:textSize="@dimen/dm028"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sm_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm052"
        android:paddingLeft="@dimen/dm052"
        android:gravity="center|left"
        >

        <ImageView
            android:layout_width="@dimen/font_sliding_menu_item"
            android:layout_height="@dimen/font_sliding_menu_item"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/left_about"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm012"
            android:text="关于NgameZone"
            android:textColor="@color/color_4d4d4d"
            android:gravity="center"
            android:textSize="@dimen/dm028"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sm_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm052"
        android:paddingLeft="@dimen/dm052"
        >

        <ImageView
            android:layout_width="@dimen/font_sliding_menu_item"
            android:layout_height="@dimen/font_sliding_menu_item"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/left_ad"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm012"
            android:text="广告合作"
            android:textColor="@color/color_4d4d4d"
            android:gravity="center"
            android:textSize="@dimen/dm028"/>
    </LinearLayout>
</LinearLayout>