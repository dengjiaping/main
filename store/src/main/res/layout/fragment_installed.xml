<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/f5f5f5"
                android:orientation="vertical">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@color/e5e5e5"
        android:dividerHeight="@dimen/dp_05"
        android:paddingLeft="@dimen/dm025"
        android:paddingRight="@dimen/dm025"
        android:scrollbars="none"></ListView>

    <ImageView
        android:id="@+id/empty_iv"
        android:layout_width="@dimen/dm200"
        android:layout_height="@dimen/dm200"
        android:paddingBottom="@dimen/dm050"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_no_data"
        android:visibility="invisible"/>
</RelativeLayout>