<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:ngame="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="85dp"
              android:background="@color/white"
              android:descendantFocusability="blocksDescendants"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_weight="1"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_1"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_12"
            android:scaleType="fitXY"
            fresco:actualImageScaleType="fitXY"
            fresco:failureImage="@drawable/ic_def_logo_188_188"
            fresco:progressBarImage="@drawable/ic_def_logo_188_188"
            fresco:roundedCornerRadius="@dimen/dp_12"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_1"
            android:layout_toRightOf="@+id/img_1"
            android:clickable="false"
            android:maxLines="1"
            android:textColor="@color/color_1a"
            android:textSize="@dimen/dp_16"/>
        <!--=========================   分类tip ====================================== -->
        <LinearLayout
            android:id="@+id/classify_item_llay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_1"
            android:layout_toRightOf="@id/img_1"
            android:clickable="false"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            >

            <TextView
                android:id="@+id/classify_item_tip_tv_01"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_16"
                android:background="@drawable/shape_classify_item_white_blue"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/dm008"
                android:paddingRight="@dimen/dm008"
                android:text=""
                android:textColor="@color/color_128fc4"
                android:textSize="@dimen/dp_10"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/classify_item_tip_tv_02"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/shape_classify_item_white_blue"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/dm008"
                android:paddingRight="@dimen/dm008"
                android:text=""
                android:textColor="@color/color_128fc4"
                android:textSize="@dimen/dp_10"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/classify_item_tip_tv_03"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/shape_classify_item_white_blue"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/dm008"
                android:paddingRight="@dimen/dm008"
                android:text=""
                android:textColor="@color/color_128fc4"
                android:textSize="@dimen/dp_10"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/classify_item_tip_tv_04"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/shape_classify_item_white_blue"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/dm008"
                android:paddingRight="@dimen/dm008"
                android:text=""
                android:textColor="@color/color_128fc4"
                android:textSize="@dimen/dp_10"
                android:visibility="gone"
                />

        </LinearLayout>

        <RatingBar
            android:id="@+id/rating_bar"
            style="@style/RatingBarSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/classify_item_llay"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_marginLeft="-1.5dp"
            android:layout_toRightOf="@+id/img_1"
            android:clickable="false"
            android:isIndicator="true"
            android:numStars="5"
            android:progress="0"
            android:secondaryProgress="0"
            android:stepSize="0.1"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/classify_item_llay"
            android:layout_marginBottom="4.5dp"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_toRightOf="@id/rating_bar"
            android:clickable="false"
            android:textColor="@color/color_1a"
            android:textSize="@dimen/dp_12"/>

        <cn.ngame.store.view.GameLoadProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="60dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:clickable="true"
            android:text="@string/download"
            android:textColor="@color/white"
            android:textSize="14dp"
            ngame:progress="0"/><!-- textSize不能引用资源文,件直接3dp-->
    </RelativeLayout>

    <include layout="@layout/layout_line_05dp_e6e6e6"></include>
</LinearLayout>