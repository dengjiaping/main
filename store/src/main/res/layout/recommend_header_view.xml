    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/f5f5f5"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:id="@+id/recommend_classify_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_8"
            android:text="专题"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_16"/>

        <TextView
            android:id="@+id/recommend_topics_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_20"
            android:paddingTop="@dimen/dp_12"
            android:text="@string/see_more"
            android:textColor="@color/font_18b9fe"
            android:textSize="@dimen/dp_12"/>

    </RelativeLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/f5f5f5"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_8"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/horizontalView_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recommend_horizontal_view_height"
            android:focusable="false"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>