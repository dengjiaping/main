<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_f5"
              android:orientation="vertical">

    <include layout="@layout/layout_title_left_center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_10"
            android:text="自动删除安装包"
            android:textColor="@color/font_1a"
            android:textSize="@dimen/dp_14"/>

        <ToggleButton
            android:id="@+id/but_install"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@android:color/transparent"
            android:button="@drawable/selector_toggle_but"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_10"
            android:text="推送通知设置"
            android:textColor="@color/font_1a"
            android:textSize="@dimen/dp_14"/>

        <ToggleButton
            android:id="@+id/but_push"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@android:color/transparent"
            android:button="@drawable/selector_toggle_but"
            android:checked="true"
            android:text=""
            android:textOff=""
            android:textOn=""/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_05"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
      >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="允许运营商下载"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/font_1a"
            android:textSize="@dimen/dp_14"/>

        <ToggleButton
            android:id="@+id/but_load"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:button="@drawable/selector_toggle_but"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_10"
  >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="清理缓存"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/font_1a"
            android:textSize="@dimen/dp_14"/>

        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0KB"
            android:paddingRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:textColor="@color/font_color_b3"
            android:textSize="@dimen/dp_14"/>

    </RelativeLayout>
