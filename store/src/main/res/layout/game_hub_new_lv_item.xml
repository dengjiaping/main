<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:descendantFocusability="blocksDescendants"
              android:orientation="vertical">
    <!--item的时候没有反应，无法获取的焦点-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm012"
        android:layout_marginLeft="@dimen/dm036"
        android:layout_marginTop="@dimen/dm016"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_1"
            android:layout_width="@dimen/dm040"
            android:layout_height="@dimen/dm040"
            android:src="@drawable/ic_launcher"
            fresco:actualImageScaleType="fitXY"
            fresco:failureImage="@drawable/ic_launcher"
            fresco:placeholderImage="@drawable/ic_launcher"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:progressBarImage="@drawable/ic_launcher"
            fresco:roundAsCircle="true"
            fresco:roundedCornerRadius="4dp"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm016"
            android:layout_marginRight="@dimen/dm036"
            android:layout_toRightOf="@+id/img_1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/b3"
            android:textSize="@dimen/dm024"/>

    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/recommend_game_pic_new"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recommend_item_game_pic_hight"
        android:paddingLeft="@dimen/dm020"
        android:paddingRight="@dimen/dm020"
        android:scaleType="centerCrop"
        fresco:actualImageScaleType="fitXY"
        fresco:failureImage="@drawable/ic_def_logo_720_288"
        fresco:failureImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/ic_def_logo_720_288"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:progressBarImage="@drawable/ic_def_logo_720_288"
        fresco:viewAspectRatio="2"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm036"
        android:layout_marginTop="@dimen/dm016"
        android:clickable="false"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingRight="@dimen/dm036"
        android:text=""
        android:textColor="@color/game_name"
        android:textSize="@dimen/dm030"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm036"
        android:layout_marginRight="@dimen/dm036"
        android:layout_marginTop="@dimen/dm015"
        android:clickable="false"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/dm010"
        android:maxLines="3"
        android:text=""
        android:textColor="@color/color_808080"
        android:textSize="@dimen/dm022"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm036"
        android:layout_marginRight="@dimen/dm036"
        android:layout_marginTop="@dimen/dm010">

        <TextView
            android:id="@+id/game_hub_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/color_808080"
            android:textSize="@dimen/dm020"/>

        <TextView
            android:id="@+id/game_hub_look_nub_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/color_808080"
            android:textSize="@dimen/dm020"/>

        <ImageView
            android:layout_width="@dimen/dm026"
            android:layout_height="@dimen/dm016"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dm010"
            android:layout_toLeftOf="@id/game_hub_look_nub_tv"
            android:scaleType="centerInside"
            android:src="@drawable/ic_eyes"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:layout_marginBottom="@dimen/dm008"
        android:layout_marginLeft="@dimen/dm036"
        android:layout_marginRight="@dimen/dm036"
        android:layout_marginTop="@dimen/dm020"
        android:background="@color/e6e6e6"></View>

</LinearLayout>