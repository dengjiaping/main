<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/shape_white_empty"
              android:orientation="vertical">

    <cn.ngame.store.view.ReviewScoreView
        android:id="@+id/review_scoreView"
        layout="@layout/layout_review_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        />

    <com.facebook.drawee.view.SimpleDraweeView
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ic_percent_icon"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_5"
        android:scaleType="fitXY"
        android:src="@drawable/ic_def_logo_188_188"
        fresco:actualImageScaleType="fitXY"
        fresco:failureImage="@drawable/ic_def_logo_188_188"
        fresco:failureImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/ic_def_logo_188_188"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:progressBarImage="@drawable/ic_def_logo_188_188"
        fresco:progressBarImageScaleType="centerCrop"
        fresco:roundAsCircle="true"
        />

    <TextView
        android:id="@+id/ic_percent_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_4"
        android:text="用户名"
        android:textColor="@color/cccccc"/>

    <!--评分栏-->
    <RatingBar
        android:layout_marginTop="@dimen/dp_4"
        android:id="@+id/rating_bar"
        style="@style/RatingBarBig"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_25"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:numStars="5"
        android:rating="5"
        android:stepSize="1"/>

    <TextView
        android:id="@+id/ic_percent_sumbit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_corner4dp_18b9fe"
        android:padding="@dimen/dp_14"
        android:text="评分"
        android:textColor="@color/white"/>
</LinearLayout>