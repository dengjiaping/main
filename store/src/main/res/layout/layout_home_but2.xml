            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/font_gray"
                android:text="VR游戏" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/but6"
