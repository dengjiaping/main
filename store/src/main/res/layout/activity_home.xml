<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Title 模块 -->
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/left_but"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:onClick="onLoginBut"
            android:src="@drawable/login_photo_small" />


        <Button
            android:id="@+id/but_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/but_msg"
            android:background="@drawable/search_title"
            android:gravity="center" />

        <Button
            android:id="@+id/but_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/msg_title"
            android:gravity="center" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_game"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height"
        android:layout_below="@+id/title"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/rl_notifi"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="26dp"
                android:layout_centerInParent="true"
                android:background="@drawable/gamehub_notifi" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@+id/rl_add"
            android:layout_toRightOf="@+id/rl_notifi"
            android:layout_weight="1"
            android:background="@drawable/shape_search"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/search" />

            <TextView
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/but_fork"
                android:layout_toRightOf="@+id/img_1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/search"
                android:imeActionLabel="搜索"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/font_black_6"
                android:textColorHint="@color/font_black_9"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/but_fork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/fork"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_add"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/home_add_post" />
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl_game"
        android:layout_marginBottom="41dp" />

    <LinearLayout
        android:id="@+id/ll_bot"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:background="@drawable/menu_game_hub_circle"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/menu_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="2dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="2dp"
                android:background="@color/gray" />

            <Button
                android:id="@+id/menu_home_bt"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:background="@drawable/menu_home"
                android:clickable="false"
                android:enabled="false" />

            <TextView
                android:id="@+id/menu_home_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_home"
                android:textColor="@color/footer_font"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_game"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="2dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="2dp"
                android:background="@color/gray" />

            <Button
                android:id="@+id/menu_game_bt"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/menu_game"
                android:clickable="false"
                android:enabled="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/menu_game_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_game"
                android:textColor="@color/footer_font"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_game_hub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="2dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="2dp"
                android:background="@color/gray" />

            <Button
                android:id="@+id/menu_video_bt"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:background="@drawable/menu_video"
                android:clickable="false"
                android:enabled="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/menu_video_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_video"
                android:textColor="@color/footer_font"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_manager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="2dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="2dp"
                android:background="@color/gray" />

            <Button
                android:id="@+id/menu_manager_bt"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:background="@drawable/menu_manage"
                android:clickable="false"
                android:enabled="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/menu_manager_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_manager"
                android:textColor="@color/footer_font"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/menu_game_hub_bt"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/menu_game_hub" />
</RelativeLayout>
