<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_title"
        android:layout_gravity="center_horizontal"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/default_logo"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:viewAspectRatio="2.5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/sdv_img"
        android:layout_marginTop="-30dp"
        android:alpha="0.3"
        android:background="@color/black"></LinearLayout>

    <TextView
        android:id="@+id/tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/sdv_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-30dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="极速是美国"
        android:textColor="@color/white"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sdv_img"
        android:background="@color/white"
        android:padding="10dp"
        android:lineSpacingExtra="2dp"
        android:text="请问请问请问群无我去恶趣味人情味日发售的范德萨的双丰收的范德萨 第三方第三方的首付多少"
        android:textSize="13sp"
        android:textColor="@color/font_333"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray"/>
</LinearLayout>