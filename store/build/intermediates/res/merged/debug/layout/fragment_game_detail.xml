<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:paddingRight="5dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/img_container"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:focusable="false">

                <!--<ImageView
                    android:layout_width="150dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/temp_game_1"
                    android:contentDescription="@string/image_des"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/temp_game_1"
                    android:contentDescription="@string/image_des"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/temp_game_1"
                    android:contentDescription="@string/image_des"/>-->

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:text="@string/game_summary"
            android:textColor="@color/font_black_6"/>

        <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:textColor="@color/font_black_6"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">
        <TextView
            android:id="@+id/tv_show_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:text="显示全部"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:visibility="invisible"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:text="@string/game_content"
            android:textColor="@color/font_black_6"/>
        <TextView
            android:id="@+id/tv_update_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="qweqweqweqweqweqweeqwqwqwqwqwqwqwqwqwqwqwqwqwqwqwqwqw
            qwqwqwqwqwqwqwqwqwqwqwqwqwqwqw
            qwqwqwqwqwqwqwqwqwqwqwqwqwqw"
            android:textSize="12sp"
            android:textColor="@color/font_black_6"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <TextView
                android:id="@+id/tv_show_all2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="20dp"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:text="显示全部"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:visibility="invisible"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:text="@string/game_info"
            android:textColor="@color/font_black_6"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:text="@string/game_version" />

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="left"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:text="@string/game_time" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="left"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="12sp"
                    android:text="@string/game_company"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:visibility="gone"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>

</ScrollView>
